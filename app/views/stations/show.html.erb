<div class="mic-image-inverse">
  <div class="row top-row">

    <div class="row">
        <div class="listens-station small-4 columns">
          <h1 class="listens-title">@<%= @listen_user.twitter %></h1>
          <img id="listens-pic" src="<%= @listen_user.profile_image_url %>" />

          <% if @current_user_presets.include?(@current_station.id) %>
            <button class='addToMyPresets remove' data-stationId="<%= @listen_station.id %>">Remove From Presets</button>

          <% else %>
            <button class='addToMyPresets add' data-stationId="<%= @listen_station.id %>">Add Station to My Presets</button>
          <% end %>
        </div>

      <div class="small-7 columns">
        <fieldset id="nowPlayingFieldset">
          <legend>Now Playing</legend>
          <ul id="nowPlayingList" class="listens">
            <li class='nowPlaying'>
              <span class='title'></span>
              <span class='addToMyStationButton'></span>
              <span class='artist'></span>
            </li>
          </ul>
        </fieldset>
        <fieldset id="songHistoryFieldset">
          <legend>Song History</legend>
          <ul id="songHistoryList" class="listens">
            <% @log.each do |log_entry| %>
              <li class="song">
                <span class='title'><%= log_entry.audio_block.title %></span>
                <% if current_station.spins_per_week.has_key?(log_entry.audio_block_id) %>
                  <button class='addToMyStationButton disabled'>Song Added</button>
                <% else %>
                  <button class='addToMyStationButton' data-songId="<%= log_entry.audio_block_id %>">Add Song To My Station</button>
                <% end %> 
                <span class='artist'><%= log_entry.audio_block.artist %></span>
              </li>
            <% end %>
          </ul>
        </fieldset>
      </div>
    </div>
  </div>
</div>